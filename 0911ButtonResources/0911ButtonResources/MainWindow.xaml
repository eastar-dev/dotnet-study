<Window x:Class="_0911ButtonResources.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_0911ButtonResources"
        mc:Ignorable="d"
         Title="ButtonResources" Width="300" Height="400">
    <Window.Resources>
        <SolidColorBrush x:Key="colorBrush" Color="Blue" />
    </Window.Resources>
    <StackPanel>
        <StackPanel.Children>
            <!-- 노란색 일반 버튼 3개 생성 -->
            <Button Width="200" Height="50" Margin="5" Background="Yellow" Content="일반 버튼" />
            <Button Width="200" Height="50" Margin="5" Background="Yellow" Content="일반 버튼" />
            <Button Width="200" Height="50" Margin="5" Background="Yellow" Content="일반 버튼" />

            <!-- 정의된 리소스를 참조하여 적용하는 버튼 3개 생성 -->
            <Button Width="200" Height="50" Margin="5" Content="리소스 적용 버튼"
                    Background="{StaticResource colorBrush}" />
            <Button Width="200" Height="50" Margin="5" Content="리소스 적용 버튼"
                    Background="{StaticResource colorBrush}" />
            <Button Width="200" Height="50" Margin="5" Content="리소스 적용 버튼"
                    Background="{StaticResource colorBrush}" />
        </StackPanel.Children>
    </StackPanel>
</Window>