<Window x:Class="_0522ToolTip.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_0522ToolTip"
        mc:Ignorable="d"
        Title="ToolTipTest" Height="350" Width="350">
    <Grid>
        <Button>
            <Button.ToolTip>
                <ToolTip>
                    <StackPanel>
                        <TextBlock Margin="3">Image and Text</TextBlock>
                        <Image Source="C:\MediaData\Smile.png" Stretch="None" />
                        <TextBlock Margin="3">Image and Text</TextBlock>
                    </StackPanel>
                </ToolTip>
            </Button.ToolTip>
            <Button.Content>I have a Smile Face tooltip</Button.Content>
        </Button>
    </Grid>
</Window>
