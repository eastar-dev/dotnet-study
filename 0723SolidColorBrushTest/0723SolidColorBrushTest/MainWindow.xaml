<Window x:Class="_0723SolidColorBrushTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_0723SolidColorBrushTest"
        mc:Ignorable="d"
       Title="SolidColorBrushTest" Height="300" Width="300">
    <Grid>
        <Ellipse Margin="10,70" StrokeThickness="5" Stroke="DarkGreen" Fill="Green"/>
        <Ellipse Margin="70,10" StrokeThickness="10" Stroke="Orange">
            <Ellipse.Fill>
                <SolidColorBrush Color="Yellow"/>
            </Ellipse.Fill>
        </Ellipse>
    </Grid>
</Window>
