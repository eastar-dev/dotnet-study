<Window x:Class="_0721.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_0721"
        mc:Ignorable="d"
        Title="FillRule Test" Height="190" Width="300"
        FontFamily="Times New Roman" FontSize="20" FontWeight="Bold">
    <StackPanel Orientation="Horizontal">
        <StackPanel>
            <Polygon Stroke="Black" Points="20,40 140,30 35,110 80,10 120,100"
                Height="110" StrokeLineJoin="Miter" FillRule="Nonzero" 
                Fill="SkyBlue"/>
            <Label Content="Nonzero" HorizontalAlignment="Center"/>
        </StackPanel>
        <StackPanel>
            <Polygon Stroke="Black" Points="20,40 140,30 35,110 80,10 120,100"
                Height="110" StrokeLineJoin="Miter" FillRule="EvenOdd"  Fill="Green"/>
            <Label Content="EvenOdd" HorizontalAlignment="Center"/>
        </StackPanel>
    </StackPanel>
</Window>