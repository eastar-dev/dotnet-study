<Window x:Class="StackPannelExample5.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StackPannelExample5"
        mc:Ignorable="d"
        Title="MainWindow" Height="250" Width="400">
    <StackPanel Margin="5">
        <Label Margin="4" HorizontalAlignment="Center">
            버튼의 최대/최소 크기 지정</Label>
        <Button Margin="4" MaxWidth="180" MinWidth="100">버튼 1</Button>
        <Button Margin="4" MaxWidth="200" MinWidth="90">버튼 2</Button>
        <Button Margin="4" MaxWidth="220" MinWidth="80">버튼 3</Button>
        <Button Margin="4" MaxWidth="240" MinWidth="70">버튼 4</Button>
    </StackPanel>
</Window>
